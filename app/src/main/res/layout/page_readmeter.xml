            android:id="@+id/textView91"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:text=" ประเภท"
            android:textColor="@color/Orange"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
