<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DodgerBlue"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:paddingBottom="0dp"
        app:srcCompat="@drawable/ic_siamlogo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp">

        <TextView
            android:id="@+id/tx_dupamt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:text="รหัสพนักงาน : "
            android:textColor="@color/DarkRed"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvempid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.56"
            android:text="1000"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="90dp"
            android:text="ชื่อ : "
            android:textColor="@color/DarkRed"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvempname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.28"
            android:gravity="left"
            android:text="นายอ่านมาตร"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="55dp"
            android:text="นามสกุล : "
            android:textColor="@color/DarkRed"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvempsurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.28"
            android:gravity="left"
            android:text="สยามราช"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="ประจำสาขารหัส : "
            android:textColor="@color/DarkRed"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvempwwcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.28"
            android:text="5532011"
            android:textSize="16sp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="286dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:text="สถานะ : "
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnImportData"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="นำข้อมูลเข้า"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
